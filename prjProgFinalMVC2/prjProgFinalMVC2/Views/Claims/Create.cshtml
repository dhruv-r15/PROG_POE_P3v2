@using prjProgFinalMVC2.ViewModels
@model CreateClaimViewModel

<div class="container">
    <h2>Submit New Claim</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ModuleId"></label>
                            <select asp-for="ModuleId" id="moduleSelect" class="form-control" asp-items="ViewBag.Modules">
                                <option value="">-- Select Module --</option>
                            </select>
                            <span asp-validation-for="ModuleId" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="HoursWorked"></label>
                            <input asp-for="HoursWorked" id="hoursWorked" class="form-control" type="number" step="0.5" min="0" />
                            <span asp-validation-for="HoursWorked" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Document"></label>
                            <input asp-for="Document" type="file" class="form-control" accept=".pdf" />
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Submit Claim</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
